{% extends 'dash.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>La Liste Des Utilisateurs D'Agronomix</h1>

    <!-- Formulaire de recherche par nom -->
    <form method="get" action="{{ path('app_user_index') }}">
        <input type="text" name="name" placeholder="Rechercher par nom" value="{{ app.request.query.get('name') }}">
      
    </form>

    <br>

    <!-- Boutons de filtrage pour vérifié/non vérifié -->
    <div>
        <a href="{{ path('app_user_index', {'verified': 1}) }}" class="btn btn-success">Vérifiés</a>
        <a href="{{ path('app_user_index', {'verified': 0}) }}" class="btn btn-danger">Non Vérifiés</a>
    </div>

    <br>
    <!-- Bouton vers la page pie -->
    <div>
        <a href="{{ path('app_pie') }}" class="btn btn-primary">Voir les statistiques</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Téléphone</th>
                <th>Adresse</th>
                <th>Date Inscription</th>
                <th>Rôles</th>
                <th>Vérifié</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.dateInscription ? user.dateInscription|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Aucun utilisateur trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}" class="btn btn-secondary">Créer un nouvel utilisateur</a>
{% endblock %}
