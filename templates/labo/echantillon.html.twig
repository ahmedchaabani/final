{% extends 'dash.html.twig' %}

{% block title %}Ajouter Veterinaire{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .form-group label {
            color: black !important;
            font-size:20px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="form-container">
    <div class="form-box">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}
        <h3>{{ form.vars.data.IdE is null ? 'Ajout Echantillon' : 'Modifier Echantillon' }}</h3>

        {% for flash_error in app.flashes('error') %}
            <div class="alert alert-danger">{{ flash_error }}</div>
        {% endfor %}

        <div class="form-group">
            {{ form_label(form.code_x, 'Code X') }}
            {{ form_widget(form.code_x, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.code_x) }}
        </div>

        <div class="form-group">
            {{ form_label(form.type_e, 'Type') }}
            {{ form_widget(form.type_e, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.type_e) }}
        </div>

        <div class="form-group">
            {{ form_label(form.collection_date, 'Date de collecte') }}
            {{ form_widget(form.collection_date, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.collection_date) }}
        </div>



        <div class="form-group">
    {{ form_label(form.origin, 'Origine') }}
    <input id="origin-input" type="text" class="form-control" placeholder="Cliquez sur la carte" readonly>
    {{ form_widget(form.origin, {'attr': {'style': 'display: none;'}}) }}
    <div id="map" style="height: 300px; width: 100%; margin-top: 10px; border: 1px solid #ccc;"></div>
</div>



        <div class="form-group">
            {{ form_label(form.status, 'Statut') }}
            {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.status) }}
        </div>

        <button type="submit" class="btn btn-primary mt-3">
            {{ form.vars.data.IdE is null ? 'Ajouter' : 'Modifier' }}
        </button>

        {{ form_end(form) }}
    </div>
</div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        var map = L.map("map").setView([36.8065, 10.1815], 10); // Default: Tunis

        // Check if the map div exists
        if (!document.getElementById("map")) {
            console.error("Error: Map container not found.");
            return;
        }

        // Load OpenStreetMap tiles
        L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
            attribution: "&copy; OpenStreetMap contributors"
        }).addTo(map);

        var marker;

        function updateInput(lat, lng) {
            var locationString = lat.toFixed(6) + ", " + lng.toFixed(6);
            document.getElementById("origin-input").value = locationString;
            document.querySelector("input[name='{{ form.origin.vars.full_name }}']").value = locationString;
        }

        // Handle map click
        map.on("click", function (e) {
            if (marker) {
                map.removeLayer(marker);
            }
            marker = L.marker(e.latlng).addTo(map);
            updateInput(e.latlng.lat, e.latlng.lng);
        });

        console.log("Map initialized successfully.");
    });
</script>


<!-- Leaflet CSS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" crossorigin="anonymous" />

<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin="anonymous"></script>




{% endblock %}