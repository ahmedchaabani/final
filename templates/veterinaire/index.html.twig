{% extends 'dash.html.twig' %}

{% block title %}Veterinaire Index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4 text-primary">Vétérinaire Index</h2>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Spécialité</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Disponible</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for veterinaire in veterinaires %}
            <tr>
                <td>{{ veterinaire.id }}</td>
                <td>{{ veterinaire.nom }}</td>
                <td>{{ veterinaire.specialite }}</td>
                <td>{{ veterinaire.email }}</td>
                <td>{{ veterinaire.telephone }}</td>
                <td>{{ veterinaire.disponibilite == 'oui' ? 'oui' : 'non' }}</td>
                <td>
                    <a href="{{ path('app_veterinaire_show', {'id': veterinaire.id}) }}" class="btn btn-info btn-sm">Show</a>
                    <a href="{{ path('app_veterinaire_edit', {'id': veterinaire.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    <a href="{{ path('app_veterinaire_delete', {'id': veterinaire.id})}}" class="btn btn-danger btn-sm">supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_veterinaire_new') }}" class="btn btn-success">Create New</a>
</div>
{% endblock %}
