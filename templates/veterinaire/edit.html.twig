{% extends 'dash.html.twig' %}

{% block title %}Modifier Vétérinaire{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="text-warning mb-4">Modifier le Vétérinaire</h2>

    <div class="card shadow-lg p-4">
        <div class="card-body">
            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
            
            <div class="mb-3">
                {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nom, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.prenom, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.specialite, 'Spécialité', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.specialite, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.specialite, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.telephone, 'Téléphone', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.telephone, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.email, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.disponibilite, 'Disponibilité', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_row(form.disponibilite, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.disponibilite, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <button type="submit" class="btn btn-success">Mettre à jour</button>
            <a href="{{ path('app_veterinaire_index') }}" class="btn btn-secondary">Retour</a>
            {{ form_end(form) }}

            <hr>

            <h4 class="text-danger mt-4">Supprimer</h4>
            {{ include('veterinaire/_delete_form.html.twig', { 'class': 'btn btn-danger' }) }}
        </div>
    </div>
</div>
{% endblock %}
