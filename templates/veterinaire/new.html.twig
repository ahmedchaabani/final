{% extends 'dash.html.twig' %}

{% block title %}Ajouter Veterinaire{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-6">
        <div class="card shadow-lg p-4 rounded-4">
            <h2 class="text-center mb-4 fw-bold">Ajouter un Vétérinaire</h2>
            
            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
            
            <div class="mb-3">
                {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom'}}) }}
                {{ form_errors(form.nom, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le prénom'}}) }}
                {{ form_errors(form.prenom, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.specialite, 'Spécialité', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.specialite, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Chirurgie, Dermatologie'}}) }}
                {{ form_errors(form.specialite, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.telephone, 'Téléphone', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Ex: +33 6 12 34 56 78'}}) }}
                {{ form_errors(form.telephone, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Ex: exemple@email.com'}}) }}
                {{ form_errors(form.email, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.disponibilite, 'Disponibilité', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_row(form.disponibilite, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.disponibilite, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="d-flex justify-content-between">
                <a href="{{ path('app_veterinaire_index') }}" class="btn btn-outline-secondary fw-bold">Retour à la liste</a>
                <button type="submit" class="btn btn-primary fw-bold shadow-sm">Enregistrer</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
