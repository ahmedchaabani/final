{% extends 'dash.html.twig' %}

{% block title %}Fournisseur index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Fournisseur index</h1>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Lieu</th>
                <th>Date_enregistrement</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fournisseur in fournisseurs %}
            <tr>
                <td>{{ fournisseur.id }}</td>
                <td>{{ fournisseur.nom }}</td>
                <td>{{ fournisseur.email }}</td>
                <td>{{ fournisseur.telephone }}</td>
                <td>{{ fournisseur.lieu }}</td>
                <td>{{ fournisseur.dateEnregistrement ? fournisseur.dateEnregistrement|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_fournisseur_show', {'id': fournisseur.id}) }}">show</a>
                    <a href="{{ path('app_fournisseur_edit', {'id': fournisseur.id}) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<a href="{{ path('app_fournisseur_new') }}">Create new Fournisseur</a>
{% endblock %}
