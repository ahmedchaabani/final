{% extends 'dash.html.twig' %}

{% block title %}Ajouter une nouvelle visite{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Créer une nouvelle visite</h1>

    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}

    <div class="mb-3">
        {{ form_label(form.diagnostic, 'Diagnostic', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.diagnostic, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.diagnostic) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.animal, 'Animal', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.animal, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.animal,{'attr': {'class': 'text-danger'}}) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.veterinaire, 'Vétérinaire', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.veterinaire, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.veterinaire) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.dateVisite, 'Date de Visite', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.dateVisite, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.dateVisite) }}
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>

    {{ form_end(form) }}

    <a href="{{ path('app_visite_index') }}" class="mt-3 d-block text-decoration-none">Retour à la liste des visites</a>
</div>
{% endblock %}
