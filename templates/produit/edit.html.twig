{% extends 'dash.html.twig' %}

{% block title %}Edit Produit{% endblock %}

{% block body %}
    <h1>Edit Produit</h1>

    {{ form_start(form) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.description) }}
        {{ form_row(form.prix) }}
        {{ form_row(form.quantite_stock) }}
        {{ form_row(form.categorie) }} <!-- Corrected this line to match the field name -->
        {{ form_row(form.date_ajout) }}
        <button class="btn">Save changes</button>
    {{ form_end(form) }}

    <a href="{{ path('app_produit_index') }}">Back to list</a>
{% endblock %}
