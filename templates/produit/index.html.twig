{% extends 'dash.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    
{% endblock %}

{% block body %}

<div class="container mt-5">
    <h1>Produit index</h1>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Quantite_stock</th>
                <th>Categorie</th>
                <th>Date_ajout</th>
                <th>Fournisseur</th>  <!-- Added Fournisseur column -->
                <th>user id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.quantiteStock }}</td>
                <td>{{ produit.categorie }}</td>
                <td>{{ produit.dateAjout ? produit.dateAjout|date('Y-m-d') : '' }}</td>
                <td>{{ produit.fournisseur.nom }}</td>  <!-- Added the Fournisseur name here -->
                <td>{{ produit.IdUser.id }}</td>
                <td>
                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        
        {% endfor %}
        </tbody>
    </table>

    </div>

    <a href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
