    <h1>Produit index</h1>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Quantite_stock</th>
                <th>Categorie</th>
                <th>Date_ajout</th>
                <th>Fournisseur</th>
                <th>user id</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.quantiteStock }}</td>
                <td>{{ produit.categorie }}</td>
                <td>{{ produit.dateAjout ? produit.dateAjout|date('Y-m-d') : '' }}</td>
                <td>{{ produit.fournisseur.nom }}</td>  <!-- Added the Fournisseur name here -->
                <td>{{ produit.IdUser.id }}</td>
                
            </tr>
        
        {% endfor %}
        </tbody>
    </table>

