{% extends 'dash.html.twig' %}

{% block title %}Create Produit{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .form-group label {
            color: black !important;
            font-size: 20px;
            margin-bottom: 8px;
        }
        .container-form {
            max-width: 800px;
            margin: 30px auto;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .h {
            color: black !important;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-form">
    <h1 class="text-center mb-4">Create New Produit</h1>

    {{ form_start(form) }}
        <div class="row g-4">
            <div class="col-md-6">
                {{ form_row(form.nom, {
                    'attr': {'class': 'form-control form-control-lg'},
                    'row_attr': {'class': 'form-group'}
                }) }}
                
                {{ form_row(form.prix, {
                    'attr': {'class': 'form-control form-control-lg'},
                    'row_attr': {'class': 'form-group'}
                }) }}
                
                {{ form_row(form.quantite_stock, {
                    'attr': {'class': 'form-control form-control-lg'},
                    'row_attr': {'class': 'form-group'}
                }) }}
            </div>

            <div class="col-md-6">
                {{ form_row(form.description, {
                    'attr': {'class': 'form-control form-control-lg', 'rows': 4},
                    'row_attr': {'class': 'form-group'}
                }) }}
                
                {{ form_row(form.categorie, {
                    'attr': {'class': 'form-control form-control-lg'},
                    'row_attr': {'class': 'form-group'}
                }) }}
                
                {{ form_row(form.fournisseur, {
                    'attr': {'class': 'form-control form-control-lg'},
                    'row_attr': {'class': 'form-group'}
                }) }}
                
                {{ form_row(form.date_ajout, {
                    'attr': {'class': 'form-control form-control-lg'},
                    'row_attr': {'class': 'form-group'}
                }) }}

                {{ form_row(form.IdUser, {
                    'attr': {'class': 'form-control form-control-lg'},
                    'row_attr': {'class': 'form-group'}
                }) }}
            </div>
        </div>

        <div class="d-grid gap-2 mt-4">
            <button class="btn btn-primary btn-lg" type="submit">Create Product</button>
            <a href="{{ path('app_produit_index') }}" class="btn btn-secondary btn-lg">Back to List</a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}