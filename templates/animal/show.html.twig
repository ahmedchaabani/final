{% extends 'dash.html.twig' %}
{% block title %}Ajouter Veterinaire{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
{% endblock %}


{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4">Détails de l'Animal</h2>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th scope="row">ID</th>
                    <td>{{ animal.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ animal.nom }}</td>
                </tr>
                <tr>
                    <th scope="row">Âge</th>
                    <td>{{ animal.age }}</td>
                </tr>
                <tr>
                    <th scope="row">Type</th>
                    <td>{{ animal.type }}</td>
                </tr>
                <tr>
                    <th scope="row">Espèce</th>
                    <td>{{ animal.espece }}</td>
                </tr>
                <tr>
                    <th scope="row">Traitement</th>
                    <td>{{ animal.traitement }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_animal_index') }}" class="btn btn-outline-primary">Retour à la liste</a>
            <a href="{{ path('app_animal_edit', {'id': animal.id}) }}" class="btn btn-warning">Modifier</a>
            
            {{ include('animal/_delete_form.html.twig', {'class': 'btn btn-danger'}) }}
        </div>
    </div>
</div>
{% endblock %}
