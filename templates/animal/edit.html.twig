{% extends 'dash.html.twig' %}

{% block title %}Modifer Animal{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary mb-4">Modifier l'Animal</h2>

        {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom, {'attr': {'class': 'text-danger'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.age, 'Âge', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.age, {'attr': {'class': 'form-control', 'type': 'number', 'min': '0'}}) }}
                    {{ form_errors(form.age, {'attr': {'class': 'text-danger'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.type, 'Type', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.type, {'attr': {'class': 'text-danger'}}) }}
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.espece, 'Espèce', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.espece, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.espece, {'attr': {'class': 'text-danger'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.traitement, 'Traitement', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.traitement, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.traitement, {'attr': {'class': 'text-danger'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.veterinaire, 'Vétérinaire', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.veterinaire, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.veterinaire, {'attr': {'class': 'text-danger'}}) }}
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success w-50">Mettre à jour</button>
        </div>

        {{ form_end(form) }}

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_animal_index') }}" class="btn btn-outline-primary">Retour à la liste</a>

            <h4 class="text-danger mt-4"></h4>
            {{ include('animal/_delete_form.html.twig', { 'class': 'btn btn-danger' }) }}
        </div>
    </div>
</div>
{% endblock %}
